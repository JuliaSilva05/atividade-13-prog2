#include <stdio.h>
#include <stdlib.h>

int main()
{
    printf("Insira um nome: \n");
    char str[100];
    fgets(str,100,stdin);
    int count = 0;
    int i;
    for (i = 0; i < 100; i++){
        if (str[i]!='\0'){
            count = count + 1;
            if (str[i]==' '){
                count=count-1;
            }
        } 
    }
    
    printf("O nome possui %d letras\n",count-1);//quantidade de letras
    return 0;
}
